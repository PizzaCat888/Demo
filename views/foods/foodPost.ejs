<% include ../partials/header %>

<div class="container">
<header class="jumbotron">
    <div class="container">
    <h1>Welcome to FoodTopia</h1>
    <p>View and share delicious foods from around the world!</p>
    <p>
    <a class="btn btn-primary btn-large" href="/foods/new">Click here to start sharing!</a>
    </p>
    </div>
</header>

<div class="row text-center" style= "display:flex; flex-wrap: wrap;">
      <% foods.forEach(function(food){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= food.image %>">
                <div class="caption">
                    <h4> <%= food.name %> </h4>
                </div>
                <p>
                    <a href="/foods/<%= food._id %>" class="btn btn-primary">More Info</a>

                </p>
            </div>
       
        
        </div>
        <% }); %>
        </div>
    </div>
</div>












<% include ../partials/footer %>